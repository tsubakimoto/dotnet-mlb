<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <Version>0.4.1</Version>
    <RootNamespace>dotnet_mlb</RootNamespace>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>dotnet-mlb</ToolCommandName>
    <PackageOutputPath>./nupkg</PackageOutputPath>
    <PackageProjectUrl>https://github.com/tsubakimoto/dotnet-mlb</PackageProjectUrl>
    <RepositoryUrl>https://github.com/tsubakimoto/dotnet-mlb</RepositoryUrl>
    <Description>This is a joke dotnet-cli app for Major League Baseball (MLB).</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.CommandLineUtils" Version="1.1.1" />
  </ItemGroup>

</Project>
